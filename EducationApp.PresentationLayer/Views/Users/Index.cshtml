@model IEnumerable<EducationApp.DataAccessLayer.Entities.ApplicationUser>
@{
    ViewBag.Title = "User list";
}

<a asp-action="Create">Add user</a>

<table class="table">
    <tr><th>Email</th><th>First Name</th><th>Last Name</th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Сhange</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="GoToRoles">Roles</a>