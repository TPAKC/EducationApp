@model EducationApp.BusinessLogicalLayer.Models.ViewModels.LoginViewModel

    <h2>Authorization</h2>
    <form method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <p>
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
        <p>
            <div>
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe" />
            </div>
            <div>
                <input type="submit" value="Login" />
            </div>
        <p>
            <div>
                <input type="submit" asp-controller="Account" asp-action="Register" value="Registration" />
            </div>
        <p>
            <div>
                <input type="submit" asp-controller="Account" asp-action="GoToForgotPassword" value="Forgot password" />
            </div>
    </form>